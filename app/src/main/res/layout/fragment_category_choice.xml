<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context=".CategoryChoice$PlaceholderFragment">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/social_button"
        android:clickable="true"
        android:text="Social"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:id="@+id/goods_button"
        android:text="Goods"
        android:layout_below="@+id/social_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/social_button"
        android:layout_alignEnd="@+id/social_button" />
</RelativeLayout>
