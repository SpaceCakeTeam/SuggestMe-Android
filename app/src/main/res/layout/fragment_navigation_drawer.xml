<RelativeLayout
    android:id="@+id/hamburgercontainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/palette_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:background="@color/palette_primary_light"
        android:paddingLeft="10dp"
        android:id="@+id/ham_head_relativeLayout">

        <ImageView
            android:id="@+id/ham_head_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/unknown_user"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/ham_head_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anonymous_label"
            android:layout_toRightOf="@id/ham_head_avatar"
            android:layout_toEndOf="@id/ham_head_avatar"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/HamburgerList_main"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ccc"
        tools:context="it.suggestme.ui.fragment.NavigationDrawerFragment"
        android:layout_below="@+id/ham_head_relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/HamburgerList_secondary" />

    <ListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/HamburgerList_secondary"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ccc"
        tools:context="it.suggestme.ui.fragment.NavigationDrawerFragment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>


