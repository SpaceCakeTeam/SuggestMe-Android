<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ham_element_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/ham_icon_generic_accessibility"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ham_element_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:paddingTop="@dimen/navigation_drawer_item_top_padding"
        android:layout_toRightOf="@id/ham_element_icon"
        android:layout_toEndOf="@id/ham_element_icon"
        android:textSize="@dimen/navigation_drawer_text"
        android:textColor="@color/palette_black" />

</RelativeLayout>
